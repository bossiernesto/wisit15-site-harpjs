@import '../globals'

.bajada
  font 1.3em condensed
  color grisMedio

.tracks 
  p
    font 1.3em condensed
    color grisMedio

img#foto
  margin-top 1.2em
  size: 100%


.datos
  margin-vertical 2em

  h2 
    margin-top 0em
    
  p
    text-align center
    font-size 1.5em
    color grisMedio
    margin-left .25em
    margin-bottom .1em

  p.donde
    text-transform uppercase
    color celeste
    font-size 1.6em

  p.direccion
    font-size 1.4em

#map-canvas
  margin-vertical 2em
  // margin-left 3em
  height 20em

.row.detalle-talleres
  .col-xs-12
    @media (max-width: 992px)
      margin-vertical 1em

    h2 
      margin-vertical .5em
    
    .detalle
      p, li 
        font-size 1.3em
        
      .destacadito
        margin-vertical .7em .1em
        color celeste
        font-size 1.8em

      .center
        margin-vertical 1em

      .orador 
        .nombre
          font-size 1.4em
          margin-vertical 0em 0.25em
          
        .bio
          padding-left 2em
